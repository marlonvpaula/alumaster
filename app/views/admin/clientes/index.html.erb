<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Clientes</h1>
          <%= link_to 'Novo Cliente', new_admin_cliente_path, class: "btn btn-primary" %>
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Data Criação</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @clientes.each do |cliente| %>
          <tr>
            <td><%= cliente.nome %></td>
            <td><%= cliente.fone %></td>
            <td><%= cliente.created_at.strftime("%d/%m/%C%y %H:%M") %><%#= cliente.created_at.to_s(:custom_datetime) %></td>
            <td><%= link_to 'M', [:admin, cliente], class: "btn btn-default btn-circle" %></td>
            <td><%= link_to 'E', edit_admin_cliente_path(cliente), class: "btn btn-default btn-circle" %></td>
            <td><%= link_to 'D', [:admin, cliente], class: "btn btn-danger btn-circle", method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } %></td>
          </tr>
          <% end %>      
        </tbody>
      </table>
    </div>
  </div>
</div>
