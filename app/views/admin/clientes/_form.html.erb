  <%= f.text_field :nascimento %>
  </div>
  <div class="form-group col-lg-9">
  <%= f.text_field :email %>
  </div>
  <div class="form-group col-lg-12">
  <%= f.text_area :observacao, rows: '4', label: "Observação" %>
  </div>
  <div class="form-group">
	<%= f.submit 'Salvar', class: "btn btn-primary" %>
  </div>	
<% end %>

<script>
  function render_partial(pessoa) {
    if (pessoa == 'pf') {
      $('.juridica').css('display', 'none');
      $('.fisica').css('display', 'block');
    } else {
      $('.juridica').css('display', 'block');
      $('.fisica').css('display', 'none');
    }
  }

  var rates = document.getElementById('rates').value;

  $(function() {
    if ($("[id^='cliente_tpFisica']").val()) {
      render_partial('pf');
    } else {
      render_partial('pj');
    }
  });
</script>


