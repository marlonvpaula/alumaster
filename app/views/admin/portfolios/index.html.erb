<div id="page-wrapper">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Portfólio</h1>
          <%= link_to 'Novo Portfólio', new_admin_portfolio_path, class: "btn btn-primary" %>
      </div>
      <!-- /.col-lg-12 -->
  </div>
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Descrição</th>
            <th>Data Criação</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @portfolios.each do |portfolio| %>
          <tr>
            <td><%= portfolio.title %></td>
            <td><%= portfolio.description %></td>
            <td><%= portfolio.created_at.strftime("%d/%m/%C%y %H:%M") %></td>
            <td><%= link_to [:admin, portfolio], class: "btn btn-social-icon btn-bitbucket" do %>
              <i class="fa fa-list"></i>
            <% end %></td>
            <td><%= link_to edit_admin_portfolio_path(portfolio), class: "btn btn-social-icon" do %>
              <i class="fa fa-pencil-square-o"></i>
            <% end %></td>
            <td><%= link_to [:admin, portfolio], class: "btn btn-social-icon", method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } do %>
              <i class="fa fa-times"></i>
            <% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
