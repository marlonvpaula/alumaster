<%= bootstrap_form_for [:admin, @cliente] do |f| %>
  <%= f.form_group :tpFisica, label: { text: "Tipo Cliente" } do %>
    <div class="radio-inline">
      <%= f.radio_button :tpFisica, true, label: "Física", checked: true, :onclick => "render_partial('pf');" %>
    </div>
    <div class="radio-inline">
      <%= f.radio_button :tpFisica, false, label: "Jurídica", :onclick => "render_partial('pj');" %>
    </div>
    <div class="radio-inline">
      <%= f.check_box :ativo %>
    </div>
  <% end %>
  <div class="form-group col-lg-12">
  <%= f.text_field :nome %>
  </div>
  <div class="form-group col-lg-12">
  <%= f.text_field :fantasia, label: "Nome Fantasia" %>
  </div>
  <div class="form-group col-lg-6">
  <%= f.text_field :fone, label: "Telefone" %>
  </div>
  <div class="form-group col-lg-6">
  <%= f.text_field :celular %>
  </div>
  <div class="form-group col-lg-3">
  <%= f.text_field :cep %>
  </div>
  <div class="form-group col-lg-6">
  <%= f.text_field :endereco %>
  </div>
  <div class="form-group col-lg-3">
  <%= f.text_field :numero, label: "Número" %>
  </div>
  <div class="form-group col-lg-12">
  <%= f.text_field :complemento %>
  </div>
  <div class="form-group col-lg-4">
  <%= f.text_field :bairro %>
  </div>
  <div class="fisica" style="display: <%= @cliente.tpFisica ? 'block' : 'hidden' %>">
    <div class="form-group col-lg-4">
      <%= f.text_field :cpfcnpj, label: "CPF" %>
    </div>
    <div class="form-group col-lg-4">
      <%= f.text_field :rginsc, label: "RG" %>
    </div>
  </div>
  <div class="juridica" style="display: <%= @cliente.tpFisica ? 'none' : 'block' %>" >
    <div class="form-group col-lg-4" >
      <%= f.text_field :cpfcnpj, label: "CNPJ" %>
    </div>
    <div class="form-group col-lg-4">
      <%= f.text_field :rginsc, label: "Inscrição Estadual" %>
    </div>
  </div>
